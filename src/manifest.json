{
  "manifest_version": 3,
  "name": "Link Popper",
  "version": "1.0",
  "description": "A Chrome extension that allows you to preview links.",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_icon": "logo-gray.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage"]
}
